<% unless flash[:notice].blank? %>
  jQuery('#comment_<%= @comment.id %>').remove();
  jQuery('.page-header').html('<div class="alert-message info" data-alert="alert"><a class="close" href="#">x</a><p><%= escape_javascript(flash[:notice]) %></p></div>');
<% end %>
<% unless flash[:error].blank? %>
  jQuery('.page-header').html('<div class="alert-message error" data-alert="alert"><a class="close" href="#">x</a><p><%= escape_javascript(flash[:error]) %></p></div>');
<% end %>
