!!! 5
%html(lang="en")
  %head
    %title= title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .fill
        .container
          %a{:class => "brand", :href => "/"}= title
          = navigation
          %form.pull-right
            = account_button

    .container
      .content
        .page-header
          %h1= title
          = flash_message
        .row
          .span16
            = yield
      %footer
        %p &copy; Ubilabs 2011
