!!! 5
%html(lang="en")
  %head
    %title= title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .fill
        .container
          %a{:class => "brand", :href => ""}= title
          %ul.nav
            %li.active
              %a(href = "/") Home
            %li
              %a{:href => "/"} Dummy
            %li
              %a{:href => "/"} Dummy
          %p.pull-right
            - if current_user
              = current_user.email
            - else
              %a{:href => "/users/auth/google_apps", :class => "primary btn"} Sign in

    .container
      .content
        .page-header
          %h1
            Page name
            %small Supporting text or tagline
          = flash_message
        .row
          .span10
            %h2 Main content

          .span4
            %h3 Secondary content

      %footer
        %p &copy; Ubilabs 2011
