!!! 5
%html(lang="en")
  %head
    %title= title
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .topbar
      .fill
        .container
          %a{:class => "brand", :href => ""}= title
          %ul(class="nav")
            %li(class="active")
              %a(href = "/") Home
            %li
              %a(href = "/") About
            %li
              %a(href = "/") Contact
          %form{:action => "", :class => "pull-right"}
            %input{:class => "input-small", :type => "text", :placeholder => "Username"}
            %input{:class => "input-small", :type => "password", :placeholder => "Password"}
            %button{:class => "btn", :type => "submit"} Sign in

    .container
      .content
        .page-header
          %h1
            Page name
            %small Supporting text or tagline
          = flash_message
        .row
          .span10
            %h2 Main content

          .span4
            %h3 Secondary content

      %footer
        %p &copy; Ubilabs 2011
